<Application x:Class="citizenHelper.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:citizenHelper"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Default language resource -->
                <ResourceDictionary Source="/Afrikaans.xaml" />
                <ResourceDictionary Source="/Zulu.xaml" />
                <ResourceDictionary Source="/Xhosa.xaml" />
                <ResourceDictionary Source="/English.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
         
    </Application.Resources>
</Application>
